model Meal {
  id      String   @id @default(cuid())
  recipes Recipe[]
  user    String
  Plan    Plan?    @relation(fields: [planId], references: [id])
  planId  String?

  @@map("meals")
}

model plan_meals {
  id      String @id @default(cuid())
  plan_id String
  meal_id String
}

model Plan {
  id    String @id @default(cuid())
  meals Meal[]
  user  String

  @@map("plans")
}

model Recipe {
  id          String  @id @default(cuid())
  ingredients String
  steps       String
  name        String?
  user        String
  Meal        Meal?   @relation(fields: [mealId], references: [id])
  mealId      String?

  @@map("recipes")
}

model User {
  id         String   @id @default(cuid())
  username   String?
  email      String?
  firstName  String?
  lastName   String?
  created    DateTime @default(now())
  updated    DateTime @default(now())
  lastActive DateTime @default(now())
  enabled    Int      @default(1)

  @@map("users")
}
